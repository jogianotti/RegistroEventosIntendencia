{% extends 'RegistroEventosCoreBundle::base.html.twig' %}

{% block styles %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/registroeventoscore/css/usuarios.css') }}" />
{% endblock %}

{% block body -%}
	<a href="{{ path('usuarios') }}" role="button" class="btn btn-default btn-large">
	<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
	Regresar al listado de usuarios</a>

    <h2>Editar un usuario</h2>

<div class="row">
<div class="col-sm-6 col-sm-offset-3">
	{{ form_start(edit_form, {attr:{role:'form'}}) }}
        {{form_errors(edit_form)}}
	<div class="form-group">
		{{ form_errors(edit_form.nombre) }}
		{{ form_label(edit_form.nombre, 'Nombre y Apellido: ')}}
		{{ form_widget(edit_form.nombre, { 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_errors(edit_form.email) }}
		{{ form_label(edit_form.email, 'Correo electronico: ')}}
		{{ form_widget(edit_form.email, { 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_errors(edit_form.username) }}
		{{ form_label(edit_form.username, 'Nombre de Usuario: ')}}
		{{ form_widget(edit_form.username, { 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_errors(edit_form.plainPassword.first) }}
		{{ form_label(edit_form.plainPassword.first, 'Clave: ')}}
		{{ form_widget(edit_form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_errors(edit_form.plainPassword.second) }}
		{{ form_label(edit_form.plainPassword.second, 'Confirmacion Clave: ')}}
		{{ form_widget(edit_form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_widget(edit_form.baja, { 'attr': {'class': 'oculto'} }) }}
	</div>

	{{ form_rest(edit_form) }}

	<div class="space"></div>
	{{form_widget(edit_form.submit)}}

	{{ form_end(edit_form) }}
   
{{ form(edit_form) }}
</div>
</div>

{% endblock %}
