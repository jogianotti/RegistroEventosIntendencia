{% extends 'RegistroEventosCoreBundle::base.html.twig' %}

{% block body -%}
    <h1>Lista de contactos</h1>
    <a href="{{ path('agenda_new') }}" role="button" class="btn btn-success btn-large">
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    Crear un contacto nuevo</a>
    
    <table class="table table-hover">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Telefono fijo</th>
                <th>Telefono movil</th>
                <th>Cargo empresa</th>
                <th>Observaciones</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {#<td><a href="{{ path('agenda_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.telefonoFijo }}</td>
                <td>{{ entity.telefonoMovil }}</td>
                <td>{{ entity.cargoEmpresa }}</td>
                <td>{{ entity.observaciones }}</td>
                <td>
                <a href="{{ path('agenda_edit', { 'id': entity.id }) }}" role="button" class="btn btn-primary btn-large">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Editar</a>                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
