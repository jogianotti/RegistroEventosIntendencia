<div class="row">
    <div class="col-sm-4">
        <form role="form" id="formularioAgregarDetalle" name="formularioAgregarDetalle">
            {{ form_errors(form)}}
            <div class="form-group">
                {{ form_label(form.fechaDetalle, 'Fecha del Detalle: ') }}<br>
                <span>{{ form_errors(form.fechaDetalle) }}</span>
                {# Agregar DateTimePiker #}
                {#<span>Fecha: {{ form_widget(form.fechaDetalle.date) }}</span>
                <span>Hora: {{ form_widget(form.fechaDetalle.time) }}</span>
                #}
                <div class="row padding-5">
                    <div class="col-sm-12">
                        <div class="input-group date" id="dp-detalle">
                            <input id="{{ form.fechaDetalle.vars.id }}" 
                                   name="{{ form.fechaDetalle.vars.name }}" 
                                   type="datetime" class="form-control" 
                                   value="{{ datetimeActual }}" readonly/>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                {{form_errors(form.observaciones)}}
                {{form_label(form.observaciones)}}
                {{form_widget(form.observaciones,{attr:{class:'form-control'}})}}
            </div>
            <input type="hidden" name="eventoId" value="{{ evento.id }}">
            {{ form_row(form._token) }}
            <button id="botonAgregarDetalle" type="button" class="btn btn-primary">Agregar</button>
        </form>
    </div>
    <div id="listado-detalles" class="col-sm-8">
        <table class="table">
            <thead id="thead">
            <th class="thead-th">Fecha detalle</th>
            <th class="thead-th">Observaciones</th>
            <th class="thead-th">Usuario</th>
            <th class="thead-th-last"></th>
            </thead>
            <tbody id="tbody">
                {% for detalle in detalles %}
                    <tr>
                        <td class="thead-td">{{ detalle.fechaDetalle | date('Y-m-d H-i')}}</td>
                        <td class="thead-td">{{ detalle.observaciones }}</td>
                        <td class="thead-td">{{ detalle.usuario.nombre }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div> 