{% extends 'RegistroEventosCoreBundle::base.html.twig' %}

{% block styles %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/registroeventoscore/css/tipoEvento.css') }}" />
{% endblock %}

{% block body -%}
<a href="{{ path('tipos_eventos') }}" role="button" class="btn btn-default btn-large">
<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
Regresar al listado de usuarios</a>

    <h2>TipoEvento</h2>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Prioridad</th>
                <td>{{ entity.prioridad }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tipos_eventos_edit', { 'id': entity.id }) }}" role="button" class="btn btn-primary btn-large">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    Editar tipo de evento</a>             

    {{ form(delete_form) }}

{% endblock %}
